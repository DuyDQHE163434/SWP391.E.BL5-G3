@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model SWP391.E.BL5.G3.Models.Restaurant

@{
    ViewData["Title"] = "Add new Restaurant";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



<div class="row">
    <div class="col-md-4">
        @if (!ViewData.ModelState.IsValid)
        {
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(item => item.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        }

        <form asp-action="AddRestaurant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label">Restaurant Name:</label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Image:</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Location:</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProvinceId" class="control-label">Province:</label>
                <select asp-for="ProvinceId" class="form-control" asp-items="ViewBag.Province">
                    <option value="">-- Select Province --</option>
                </select>
                <span asp-validation-for="ProvinceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BusinessTypeId" class="control-label">Business Type:</label>
                <select asp-for="BusinessTypeId" class="form-control" asp-items="ViewBag.BusinessType">
                    <option value="">-- Select Business Type --</option>
                </select>
                <span asp-validation-for="BusinessTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuisineTypeId" class="control-label">Cuisine Type:</label>
                <select asp-for="CuisineTypeId" class="form-control" asp-items="ViewBag.CuisineType">
                    <option value="">-- Select Cuisine Type --</option>
                </select>
                <span asp-validation-for="CuisineTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AveragePrice" class="control-label">Average Price:</label>
                <input asp-for="AveragePrice" class="form-control" />
                <span asp-validation-for="AveragePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PriceList" class="control-label">Price List:</label>
                <input asp-for="PriceList" class="form-control" />
                <span asp-validation-for="PriceList" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OpenedTime" class="control-label">Opened Time:</label>
                <input asp-for="OpenedTime" type="time" class="form-control" />
                <span asp-validation-for="OpenedTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClosedTime" class="control-label">Closed Time:</label>
                <input asp-for="ClosedTime" type="time" class="form-control" />
                <span asp-validation-for="ClosedTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label">Contact Number:</label>
                <input asp-for="ContactNumber" type="tel" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Summary" class="control-label">Summary:</label>
                <textarea asp-for="Summary" class="form-control"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Parking" class="control-label">Parking:</label>
                <textarea asp-for="Parking" class="form-control"></textarea>
                <span asp-validation-for="Parking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label">Rating:</label>
                <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Regulations" class="control-label">Regulations:</label>
                <textarea asp-for="Regulations" class="form-control"></textarea>
                <span asp-validation-for="Regulations" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Utilities" class="control-label">Utilities:</label>
                <textarea asp-for="Utilities" class="form-control"></textarea>
                <span asp-validation-for="Utilities" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add a new restaurant" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListRestaurants">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}