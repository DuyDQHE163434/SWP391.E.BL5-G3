@model SWP391.E.BL5.G3.Models.Tour
@{
    ViewData["Title"] = "Tour Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-lg mb-4">
        <div class="row no-gutters">
            <div class="col-md-4 text-center p-4">
                <img src="@Url.Content("~/images/" + Model.Image)" alt="@Model.Name" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="card-text text-muted">@Model.Description</p>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <p class="card-text"><strong>Price:</strong> @Model.Price</p>
                            <p class="card-text"><strong>Duration:</strong> @Model.Duration</p>
                            <p class="card-text"><strong>Airplane:</strong> @Model.AirPlane</p>
                        </div>
                        <div class="col-md-6">
                            <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>
                            <p class="card-text"><strong>Group Size:</strong> @Model.GroupSize</p>
                            <p class="card-text"><strong>Guide:</strong> @Model.Guide</p>
                        </div>
                    </div>

                    <hr />

                    <p class="card-text"><strong>Itinerary:</strong></p>
                    <p class="card-text text-muted">@Model.Itinerary</p>

                    <p class="card-text"><strong>Inclusions:</strong></p>
                    <p class="card-text text-muted">@Model.Inclusions</p>

                    <p class="card-text"><strong>Exclusions:</strong></p>
                    <p class="card-text text-muted">@Model.Exclusions</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="ListTour" class="btn btn-primary btn-lg">Back to List</a>
    </div>
</div>
