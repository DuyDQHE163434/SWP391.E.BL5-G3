@using System.Security.Claims
@model SWP391.E.BL5.G3.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<h1>Create Room</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<form asp-action="CreateRoom" method="post">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" placeholder="Enter image URL" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control">
            <option value="">Select status</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <input type="hidden" name="HotelId" value="@ViewBag.HotelId" />
    <input type="hidden" asp-for="RoomId" />
    <input type="hidden" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
