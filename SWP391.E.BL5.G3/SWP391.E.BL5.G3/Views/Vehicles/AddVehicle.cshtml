@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model SWP391.E.BL5.G3.Models.Vehicle

@{
    ViewData["Title"] = "Add new Vehicle";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row">
    <div class="mt-4 d-flex flex-column">
        @if (!ViewData.ModelState.IsValid)
        {
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(item => item.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        }

        <form asp-action="AddVehicle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="VehicleName" class="control-label">Vehicle Name:</label>
                <input asp-for="VehicleName" class="form-control" />
                <span asp-validation-for="VehicleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Image:</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Location:</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProvinceId" class="control-label">Province:</label>
                <select asp-for="ProvinceId" class="form-control" asp-items="ViewBag.Province">
                    <option value="">-- Select Province --</option>
                </select>
                <span asp-validation-for="ProvinceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label">Contact Number:</label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleSupplier" class="control-label">Vehicle Supplier:</label>
                <input asp-for="VehicleSupplier" class="form-control" />
                <span asp-validation-for="VehicleSupplier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transmission" class="control-label">Transmission:</label>
                <input asp-for="Transmission" class="form-control" />
                <span asp-validation-for="Transmission" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleType" class="control-label">Vehicle Type:</label>
                <select asp-for="VehicleType" class="form-control">
                    <option value="">-- Select Type --</option>
                    <option value="1">City Car</option>
                    <option value="2">Compact MPV</option>
                    <option value="3">SUV</option>
                </select>
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaggageNumber" class="control-label">Number of Baggage:</label>
                <input asp-for="BaggageNumber" class="form-control" />
                <span asp-validation-for="BaggageNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfSeats" class="control-label">Number of Seats:</label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label">Rating:</label>
                <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status:</label>
                <select asp-for="Status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="1">Có sẵn</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="text-center mt-4 d-flex flex-column">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>

    </div>
</div>

<div class="text-center mt-4 d-flex flex-column">
    <a asp-action="ListVehicles" class="btn btn-primary btn-lg">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}