@model SWP391.E.BL5.G3.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="alert alert-success">
        <strong>Success!</strong> Your booking has been created successfully.
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Booking Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Booking ID:</dt>
                <dd class="col-sm-9">@Model.BookingId</dd>

                <dt class="col-sm-3">Hotel ID:</dt>
                <dd class="col-sm-9">@Model.HotelId</dd>

                <dt class="col-sm-3">Room ID:</dt>
                <dd class="col-sm-9">@Model.RoomId</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Start Date:</dt>
                <dd class="col-sm-9">@(Model.StartDate.HasValue ? Model.StartDate.Value.ToShortDateString() : "N/A")</dd>

                <dt class="col-sm-3">End Date:</dt>
                <dd class="col-sm-9">@(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "N/A") </dd>

                <dt class="col-sm-3">Number of People:</dt>
                <dd class="col-sm-9">@Model.NumPeople</dd>

                <dt class="col-sm-3">Message:</dt>
                <dd class="col-sm-9">@Model.Message</dd>
            </dl>
        </div>
        
    </div>
</div>
