@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<SWP391.E.BL5.G3.Models.Vehicle>

@{
    ViewData["Title"] = "List of Vehicles";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .pagination {
        text-align: center;
        padding: 20px 0;
    }

        .pagination a {
            font-size: 12px;
            width: 30px;
            height: 30px;
            background-color: transparent;
            color: #222;
            border: 1px solid rgba(0,0,0,.05);
            display: inline-block;
            vertical-align: middle;
            line-height: 30px;
            text-decoration: none;
            border-radius: 50%;
            margin: 2px;
            transition: all 0.2s linear;
        }

            .pagination a:hover, .pagination a.selected {
                color: #fff;
                background-color: #3498db;
            }
</style>

<div class="container mt-4">

    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <!--Search-->
    <div class="row mb-3">
        <div class="col-md-8 offset-md-2">
            @using (Html.BeginForm("ListVehicles", "Vehicles", FormMethod.Get, new { @class = "input-group" }))
            {
                @Html.TextBox("searchString", ViewBag.currentSearchString as string, new { @class = "form-control", placeholder = "Search vehicle..." })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            }
        </div>
    </div>

    <div class="mb-3 text-right">
        <a asp-action="AddVehicle" class="btn btn-primary">Add new Vehicle</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr class="text-center">
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleSupplier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int serialNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @serialNumber
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province.ProvinceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleSupplier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="text-center">
                        <a asp-action="EditVehicle" asp-route-id="@item.VehicleId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="VehicleDetails" asp-route-id="@item.VehicleId" class="btn btn-info btn-sm">Details</a>
                        <form method="post" asp-action="DeleteVehicle" asp-route-id="@item.VehicleId" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this vehicle?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <div class="verticals twelve">
            <div class="pagination m-t-20">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a href="@Url.Action("ListVehicles", new { page = ViewBag.CurrentPage - 1 })">‹</a>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="@Url.Action("ListVehicles", new { page = i })">@i</a>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="@Url.Action("ListVehicles", new { page = ViewBag.CurrentPage + 1 })">›</a>
                }
            </div>
        </div>
    </div>
</div>