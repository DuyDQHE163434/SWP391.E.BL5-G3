@{
    Layout = "/Views/Shared/Layouts/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<div class="container-fluid py-4">
    <div class="row">
        <!-- Today's Sales -->
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Today's Sales</p>
                                <h5 class="font-weight-bolder">
                                    @ViewData["TodaysSales"]
                                </h5>
                                <p class="mb-0">
                                    <span class="text-success text-sm font-weight-bolder">@ViewData["SalesComparison"]%</span>
                                    since yesterday
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                                <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Tours -->
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Tours</p>
                                <h5 class="font-weight-bolder">
                                    @ViewData["TotalTours"]
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                                <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Tour Guides -->
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Tour Guides</p>
                                <h5 class="font-weight-bolder">
                                    @ViewData["TotalTourGuides"]
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Monthly Sales -->
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Monthly Sales</p>
                                <h5 class="font-weight-bolder">
                                    @ViewData["MonthlySales"]
                                </h5>
                                <p class="mb-0">
                                    <span class="text-success text-sm font-weight-bolder">@ViewData["MonthlyComparison"]%</span> than last month
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                                <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Chart 1: Sales Overview -->
    <div class="col-lg-6 mb-lg-0 mb-4">
        <div class="card z-index-2 h-100">
            <div class="card-header pb-0 pt-3 bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="text-capitalize">Sales Overview</h6>
                    <select id="yearSelector" class="form-select" onchange="updateChart()">
                        @foreach (var year in ViewData["DistinctYears"] as List<int>)
                        {
                            <option value="@year">@year</option>
                        }
                    </select>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="chart">
                    <canvas id="chart-line" class="chart-canvas" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/charts/chart-4/assets/css/chart-4.css">


    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

    <!-- Chart 2: Department Sales -->
    <div class="col-lg-6 mb-lg-0 mb-4">
        <div class="card widget-card border-light shadow-sm">
            <div class="card-body p-4">
                <div class="d-block d-sm-flex align-items-center justify-content-between mb-3">
                    <div class="mb-3 mb-sm-0">
                        <h5 class="card-title widget-card-title">Feedback Overview</h5>
                    </div>
                </div>
                <div id="bsb-chart-4"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    var ctx = document.getElementById("chart-line").getContext("2d");

    // Create gradient stroke for the line chart
    var gradientStroke = ctx.createLinearGradient(0, 230, 0, 50);
    gradientStroke.addColorStop(1, 'rgba(94, 114, 228, 0.2)');
    gradientStroke.addColorStop(0.2, 'rgba(94, 114, 228, 0.0)');
    gradientStroke.addColorStop(0, 'rgba(94, 114, 228, 0)');

    var monthlySalesData = @Html.Raw(Json.Serialize(ViewData["MonthlySalesData"]));

    var chart = new Chart(ctx, {
        type: "line",
        data: {
            labels: ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"],
            datasets: [{
                label: "Monthly Sales",
                tension: 0.4,
                borderWidth: 3,
                pointRadius: 0,
                borderColor: "#5e72e4",
                backgroundColor: gradientStroke,
                fill: true,
                data: monthlySalesData, // Use data from ViewData
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false,
                }
            },
            interaction: {
                intersect: false,
                mode: 'index',
            },
            scales: {
                y: {
                    grid: {
                        drawBorder: false,
                        display: true,
                        drawOnChartArea: true,
                        drawTicks: false,
                        borderDash: [5, 5]
                    },
                    ticks: {
                        display: true,
                        padding: 10,
                        color: '#fbfbfb',
                        font: {
                            size: 11,
                            family: "Open Sans",
                            style: 'normal',
                            lineHeight: 2
                        },
                    }
                },
                x: {
                    grid: {
                        drawBorder: false,
                        display: false,
                        drawOnChartArea: false,
                        drawTicks: false,
                        borderDash: [5, 5]
                    },
                    ticks: {
                        display: true,
                        color: '#ccc',
                        padding: 20,
                        font: {
                            size: 11,
                            family: "Open Sans",
                            style: 'normal',
                            lineHeight: 2
                        },
                    }
                },
            },
        },
    });

    $(document).ready(function() {
        // Initialize chart with the data already set in monthlySalesData
        console.log("Monthly Sales Data:", monthlySalesData);
    });
</script>

<script>
    var feedbackData = [
        { rating: 0, count: 3 },   // < 1 star
        { rating: 1.5, count: 4 }, // 1 to 2 stars
        { rating: 2.5, count: 2 }, // 2 to 3 stars
        { rating: 3.5, count: 1 }, // 3 to 4 stars
        { rating: 4.5, count: 0 }, // 4 to 5 stars
    ];

    var feedbackCounts = @Html.Raw(Json.Serialize(ViewData["FeedbackCounts"]));

    var options = {
        series: feedbackCounts,
        chart: {
            type: 'pie', // Thay đổi loại biểu đồ thành pie
            height: 350
        },
        title: {
            text: 'Feedback Ratings Overview',
            align: 'center'
        },
        labels: ['< 1 Star', '1-2 Stars', '2-3 Stars', '3-4 Stars', '4-5 Stars'], // Nhãn cho các phần của biểu đồ
        dataLabels: {
            enabled: true
        },
        colors: ['#ff4560', '#008ffb', '#00e396', '#feb019', '#775dd0'], // Màu sắc cho từng phần
        fill: {
            opacity: 1
        },
    };

    var chart = new ApexCharts(document.querySelector("#bsb-chart-4"), options);
    chart.render();
</script>

