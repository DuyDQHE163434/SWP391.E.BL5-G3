@model SWP391.E.BL5.G3.Models.Tour

@{
    ViewData["Title"] = "Edit Tour";
}

<h1>Edit Tour</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditTour" enctype="multipart/form-data">
            <input type="hidden" asp-for="TourId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AirPlane" class="control-label"></label>
                <input asp-for="AirPlane" class="form-control" />
                <span asp-validation-for="AirPlane" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Itinerary" class="control-label"></label>
                <textarea asp-for="Itinerary" class="form-control"></textarea>
                <span asp-validation-for="Itinerary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Inclusions" class="control-label"></label>
                <textarea asp-for="Inclusions" class="form-control"></textarea>
                <span asp-validation-for="Inclusions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Exclusions" class="control-label"></label>
                <textarea asp-for="Exclusions" class="form-control"></textarea>
                <span asp-validation-for="Exclusions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GroupSize" class="control-label"></label>
                <input asp-for="GroupSize" class="form-control" />
                <span asp-validation-for="GroupSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Guide" class="control-label"></label>
                <input asp-for="Guide" class="form-control" />
                <span asp-validation-for="Guide" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTour">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
