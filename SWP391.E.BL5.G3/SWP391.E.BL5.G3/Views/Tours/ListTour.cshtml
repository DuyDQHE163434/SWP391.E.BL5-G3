@model SWP391.E.BL5.G3.ViewModels.TourListViewModel

@{
    ViewData["Title"] = "Booking Management - List of Tours";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col-md-8 offset-md-2">
            <form method="get" asp-controller="Tours" asp-action="ListTour" class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search tours..." />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-3 text-right">
        <a asp-action="CreateTour" class="btn btn-primary">Create Tour</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Tours.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Tours.First().Image)</th>
                <th>@Html.DisplayNameFor(model => model.Tours.First().Price)</th>
                <th>@Html.DisplayNameFor(model => model.Tours.First().Rating)</th>
                <th>@Html.DisplayNameFor(model => model.Tours.First().Duration)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tours)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="text-center">
                        <img src="@Url.Content("~/images/" + item.Image)" alt="@item.Name" class="img-thumbnail" style="width: 100px; height: 100px;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td class="text-center">
                        <a asp-action="TourDetails" asp-route-id="@item.TourId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="EditTour" asp-route-id="@item.TourId" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" asp-action="DeleteTour" asp-route-id="@item.TourId" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this tour?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Tours Pagination">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ListTour" asp-route-pageNumber="@(Model.PageNumber - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="ListTour" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ListTour" asp-route-pageNumber="@(Model.PageNumber + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </li>
            }
        </ul>
    </nav>


</div>
