@model SWP391.E.BL5.G3.Models.Booking

@{
    ViewData["Title"] = "Xác Nhận Đặt Tour";
    Layout = "/Views/Shared/_HomeLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="alert alert-success">
        <h4>Cảm ơn bạn đã đặt tour!</h4>
        <p>Chi tiết đặt tour:</p>
        <ul>
            <li><strong>Tên:</strong> @Model.Name</li>
            <li><strong>Số điện thoại:</strong> @Model.Phone</li>
            <li><strong>Ngày bắt đầu:</strong> @Model.StartDate.ToShortDateString()</li>
            <li><strong>Ngày kết thúc:</strong> @Model.EndDate.ToShortDateString()</li>
            <li><strong>Số người:</strong> @Model.NumPeople</li>
            <li><strong>Ghi chú:</strong> @Model.Message</li>
            <li><strong>Tour ID:</strong> @Model.TourId</li>
        </ul>
    </div>

    <div class="text-center">
        <a asp-action="ListTourForGuests" class="btn btn-primary">Quay lại danh sách tour</a>
    </div>
</div>
