@using System.Globalization
@model SWP391.E.BL5.G3.Models.Room

@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .room-details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .room-details-container h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .room-details-container dl {
            margin-bottom: 20px;
        }

        .room-details-container dt {
            font-weight: bold;
            font-size: 1.1rem;
            color: #333;
        }

        .room-details-container dd {
            margin-bottom: 10px;
            font-size: 1rem;
            color: #555;
        }

        .room-details-container img {
            max-width: 300px;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

    .room-details-actions {
        display: flex;
        justify-content: space-between;
    }

    .btn-custom {
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 5px;
        text-transform: uppercase;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

    .btn-success-custom {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }
</style>

<div class="room-details-container">
    <h1>@ViewData["Title"]</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-3">Room ID</dt>
            <dd class="col-sm-9">@Model.RoomId</dd>

            <dt class="col-sm-3">Hotel ID</dt>
            <dd class="col-sm-9">@Model.RoomId</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price?.ToString("C0", new CultureInfo("vi-VN"))</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@(@Model.Status == true ? "Booked" : "Available")</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.Image" alt="Room Image" class="img-thumbnail" />
            </dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>

    <div class="room-details-actions">
        @{
            var role = ViewData["Role"]?.ToString();
            if (role == "Customer")
            {
                <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-primary-custom btn-custom">Back to List</a>
                <a asp-controller="Booking" asp-action="Create" asp-route-hotelId="@Model.HotelId" asp-route-roomId="@Model.RoomId" class="btn btn-success-custom btn-custom">Book Now</a>
            }
            else
            {
                <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-primary-custom btn-custom">Back to List</a>
            }
        }
    </div>
</div>
